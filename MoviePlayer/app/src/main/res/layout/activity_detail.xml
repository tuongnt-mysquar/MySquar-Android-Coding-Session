<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.luu.com.movieplayer.ui.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="@dimen/card_normal_elevation_size"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/cardview_zero_radiuss"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/cardview_default_padding"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_detail_main"
                    android:layout_width="@dimen/img_detail_width_size"
                    android:layout_height="@dimen/img_detail_height_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/cardview_default_padding"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/txt_vote_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vote count: 2356"
                        android:textSize="@dimen/default_text_size"/>
                    <TextView
                        android:layout_marginTop="@dimen/default_margin"
                        android:id="@+id/txt_vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vote average: 7.4"
                        android:textSize="@dimen/default_text_size"/>
                    <TextView
                        android:layout_marginTop="@dimen/default_margin"
                        android:id="@+id/txt_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vote count:  83.758"
                        android:textSize="@dimen/default_text_size"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="@dimen/card_normal_elevation_size"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/cardview_zero_radiuss"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/cardview_default_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|left"
                    android:textStyle="bold"
                    android:text="Ngoc Luu Trinh"
                    android:textSize="@dimen/cardview_medium_text_size"
                    android:textColor="@android:color/black"/>


                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/cardview_small_padding"
                    android:paddingTop="@dimen/cardview_small_padding"
                    android:text="Ngoc Luu Trinh da binh chon a Sui Cao Ngoc Y - Ha Ton Quyen"
                    android:textSize="@dimen/cardview_small_text_size" />

                <TextView
                    android:id="@+id/txt_webside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|left"
                    android:textStyle="bold"
                    android:text="@string/website"
                    android:paddingTop="@dimen/cardview_small_padding"
                    android:textSize="@dimen/cardview_medium_text_size"
                    android:textColor="@android:color/black"/>


                <TextView
                    android:id="@+id/txt_website_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:paddingLeft="@dimen/cardview_small_padding"
                    android:paddingTop="@dimen/cardview_small_padding"
                    android:text="http://alezaa.com"
                    android:linksClickable="true"
                    android:textSize="@dimen/cardview_small_text_size" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
